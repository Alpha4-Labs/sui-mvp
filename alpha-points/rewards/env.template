# Alpha4 Rewards System Environment Configuration
# Based on comprehensive frontend transaction patterns

# =============================================================================
# Sui Network Configuration
# =============================================================================
VITE_SUI_NETWORK=testnet
VITE_SUI_RPC_URL=https://fullnode.testnet.sui.io

# =============================================================================
# Smart Contract Configuration
# =============================================================================
# Main Alpha4 package ID (primary package)
VITE_PACKAGE_ID=0x...

# Perk manager package ID (optional, defaults to main package)
VITE_PERK_MANAGER_PACKAGE_ID=0x...

# =============================================================================
# Shared Objects Configuration
# =============================================================================
# Core system objects
VITE_CONFIG_ID=0x...           # Configuration object ID
VITE_LEDGER_ID=0x...           # Alpha Points ledger object ID
VITE_ORACLE_ID=0x...           # Price oracle object ID

# Partner and capability objects
VITE_PARTNER_CAP_ID=0x...      # Partner capability object ID
VITE_STAKING_MANAGER_ID=0x...  # Staking manager object ID (optional)
VITE_ESCROW_VAULT_ID=0x...     # Escrow vault object ID (optional)
VITE_LOAN_CONFIG_ID=0x...      # Loan configuration object ID (optional)

# =============================================================================
# Privacy Configuration
# =============================================================================
# Global metadata salt for privacy-preserving hashing
# This MUST match the salt used in frontend and Discord bot
VITE_METADATA_SALT=your-secure-salt-here-32-chars
# Alternative naming for consistency with Discord bot:
# METADATA_SALT=your-secure-salt-here-32-chars

# =============================================================================
# Discord Integration
# =============================================================================
# Discord bot configuration
VITE_DISCORD_BOT_TOKEN=...     # Discord bot token for role assignment
VITE_DISCORD_GUILD_ID=...      # Discord server/guild ID
VITE_DISCORD_ENDPOINT=...      # Discord API endpoint for role assignment

# Discord role IDs for different perks
VITE_DISCORD_ALPHA_OG_ROLE_ID=...     # Alpha OG role ID
VITE_DISCORD_PREMIUM_ROLE_ID=...      # Premium role ID
VITE_DISCORD_TESTER_ROLE_ID=...       # Tester role ID
VITE_DISCORD_VETERAN_ROLE_ID=...      # Veteran role ID

# =============================================================================
# SuiNS Configuration (for role perks with subname creation)
# =============================================================================
VITE_SUINS_PARENT_DOMAIN_NAME=alpha4.sui    # Parent domain name
VITE_SUINS_PARENT_OBJECT_ID=0x...            # Parent domain NFT object ID

# =============================================================================
# Optional Advanced Configuration
# =============================================================================
# Gas optimization
VITE_DEFAULT_GAS_BUDGET=10000000     # Default gas budget (0.01 SUI)

# Development/Testing
VITE_ENABLE_DEBUG_LOGGING=true       # Enable detailed console logging
VITE_MOCK_DISCORD_ROLES=false        # Mock Discord role assignment for testing

# Network connectivity
VITE_RPC_TIMEOUT_MS=30000           # RPC timeout in milliseconds
VITE_RETRY_ATTEMPTS=3               # Number of retry attempts for failed requests 