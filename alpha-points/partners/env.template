# Alpha4 Frontend Environment Configuration
# Copy this file to .env and fill in the appropriate values

# =============================================================================
# Privacy Configuration
# =============================================================================
# Global metadata salt for privacy-preserving hashing
VITE_METADATA_SALT=your-secure-salt-here-32-chars

# =============================================================================
# Sui Network Configuration
# =============================================================================
VITE_SUI_NETWORK=testnet

# Custom RPC endpoint (optional - defaults to network standard if not provided)
VITE_SUI_RPC_URL=https://fullnode.testnet.sui.io

# =============================================================================
# Smart Contract Configuration
# =============================================================================
# Package IDs for different contract versions
VITE_PACKAGE_ID=0x...                    # Latest package ID (primary)
VITE_PACKAGE_ID_V11=0x...                # Version 11
VITE_PACKAGE_ID_V10=0x...                # Version 10
VITE_PACKAGE_ID_V9=0x...                 # Version 9
VITE_PACKAGE_ID_V8=0x...                 # Version 8
VITE_PACKAGE_ID_V7=0x...                 # Version 7
VITE_PACKAGE_ID_V6=0x...                 # Version 6
VITE_PACKAGE_ID_V5=0x...                 # Version 5
VITE_PACKAGE_ID_V4=0x...                 # Version 4
VITE_PACKAGE_ID_V3=0x...                 # Version 3
VITE_PACKAGE_ID_V2=0x...                 # Version 2
VITE_PACKAGE_ID_V1=0x...                 # Version 1

# =============================================================================
# Shared Objects Configuration
# =============================================================================
VITE_CONFIG_ID=0x...                     # Configuration object ID
VITE_LEDGER_ID=0x...                     # Alpha Points ledger object ID
VITE_STAKING_MANAGER_ID=0x...            # Staking manager object ID
VITE_ORACLE_ID=0x...                     # Price oracle object ID
VITE_LOAN_ID=0x...                       # Loan object ID
VITE_ESCROW_ID=0x...                     # Escrow vault object ID
VITE_PARTNER_CAP=0x...                   # Partner capability object ID

# =============================================================================
# SuiNS Configuration
# =============================================================================
VITE_SUINS_PARENT_DOMAIN_NAME=alpha4.sui  # Parent domain name for subnames
VITE_SUINS_PARENT_OBJECT_ID=0x...         # Parent domain NFT object ID

# =============================================================================
# Authentication Configuration
# =============================================================================
# Google OAuth for zkLogin
VITE_GOOGLE_WEB_CLIENT_ID=...             # Google OAuth client ID

# Enoki SDK configuration
VITE_ENOKI_KEY=...                        # Enoki API key for sponsored transactions

# =============================================================================
# External APIs
# =============================================================================
# BlockVision API for event fetching
VITE_BLOCKVISION_API_KEY=...              # BlockVision API key
VITE_BLOCKVISION_HTTPS=https://api.blockvision.org  # BlockVision API base URL

# =============================================================================
# Sponsorship Configuration
# =============================================================================
# Sponsored transaction settings
VITE_PLATFORM_SPONSOR_ADDRESS=0x...       # Platform sponsor wallet address
VITE_DEPLOYER_SPONSOR_ADDRESS=0x...       # Deployer sponsor wallet address
VITE_ENABLE_PERK_SPONSORSHIP=false        # Enable sponsored perk transactions
VITE_ENABLE_PARTNER_CAP_SPONSORSHIP=false # Enable sponsored partner cap transactions
VITE_ENABLE_ALL_PARTNER_SPONSORSHIP=false # Enable all partner sponsorship
VITE_DEFAULT_SPONSORED_GAS_BUDGET=10000000 # Default gas budget for sponsored transactions (0.01 SUI)

